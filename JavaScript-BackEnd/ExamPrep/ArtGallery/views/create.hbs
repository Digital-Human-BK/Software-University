<section id="create-container">
    <div class="create-container-info">
        <img src="/static/style/img/blog-img12.jpg" alt="image">
        {{#with data}}
        <form action="/create" method="post" class="container-text">

            <h2>Create Publication</h2>
            <p>Add your own masterpiece!</p>

            <label for="title">Title:</label>
            <input type="text" id="title" placeholder="Spring in the garden" name="title" value="{{title}}">

            <label for="painting-tech">Painting technique:</label>
            <input type="text" id="painting-tech" placeholder="Oil paints" name="technique" value="{{technique}}">

            <label for="picture">Art picture:</label>
            <input type="text" id="picture" placeholder="http://..." name="img" value="{{img}}">

            <label for="certificate">Certificate of authenticity:</label>
            <input type="text" id="certificate" placeholder="Yes/No" name="certificate" value="{{certificate}}">

            <button class="create-btn">Create</button>

        </form>
        {{/with}}
    </div>
</section>