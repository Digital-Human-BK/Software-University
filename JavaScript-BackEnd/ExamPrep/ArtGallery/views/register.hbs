<section id="register-container">
    <div class="register-container-info">
        <img src="/static/style/img/slider.jpg" alt="image">

        <form action="/register" method="post" class="container-text">
            <h2>Register</h2>
            <p>Register to get ideas and view the latest masterpieces.</p>

            <label for="username">Username:</label>
            <input type="text" id="username" placeholder="dude69" name="username" value="{{data.username}}">

            <label for="password">Password:</label>
            <input type="password" id="password" placeholder="*****" name="password">

            <label for="re-password">Repeat password:</label>
            <input type="password" id="re-password" placeholder="*****" name="repass">

            <label for="address">Address:</label>
            <input type="text" id="address" placeholder="101 Some Street, Sometown" name="address" value="{{data.address}}">

            <button class="register-btn">Register</button>
            <div class="card-no-account">
                <p>Already have an account?<a href="/login"> Sign in</p>
            </div>

        </form>
    </div>

</section>